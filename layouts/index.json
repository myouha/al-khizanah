{{- $pages := where .Site.RegularPages "Section" "seasons" -}}
[
{{- range $i, $p := $pages -}}
  {{- if $i }},{{ end }}
  {
    "title": {{ $p.Title | jsonify }},
    "url": {{ $p.RelPermalink | jsonify }},
    "season": {{ $p.Params.season }},
    "episode": {{ $p.Params.episode }},
    "tags": {{ $p.Params.tags | jsonify }},
    "chapters": [
      {{- range $j, $c := $p.Params.chapters -}}
        {{- if $j }},{{ end }}
        {{ $c.title | jsonify }}
      {{- end -}}
    ]
  }
{{- end -}}
]